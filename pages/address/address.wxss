
.heard{
display:flex;
position:fixed;
left:0;
top:0;
right:0;
z-index: 10;
}
.nav{
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
}
.nav-title{
width: 100%;
height: 45px;
line-height: 45px;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-family:PingFang-SC-Medium;
font-size:37rpx;
letter-spacing:2px;
}

.nav-title text{
font-size: 36rpx;
}

.nav .back{
width: 22px;
height: 22px;
position: absolute;
bottom: 0;
left: 0;
padding: 10px 15px;
}
.bg-white{
background-color: #fff;
}
.bg-gray{
background-color: #fff;
}
.overflow{
overflow: auto;
}
.hidden{
overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.hide{
    display: none;
}

.show{
    display: block;
}

.header{
    height: 130rpx;
    line-height: 130rpx;
    background-color: #FFFFFF;
    font-size: 28rpx;
    margin-bottom: 25rpx;
    position: relative;
}

.header text{
    padding: 20rpx;
    background-color: #F2F2F2;
    margin-left: 20rpx;
}

.address_box{
    font-size: 28rpx;
    padding: 0 20rpx;
}

.address{
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    min-width: 120rpx;
    padding: 0 20rpx;
    text-align: center;
    background-color: #FFFFFF;
    margin-right: 15rpx;
    margin-top: 20rpx;
}

.triangle{
    height: 25rpx;
    width: 25rpx;
    background-color: #F2F2F2;
    transform:rotate(45deg);
    position: absolute;
    left: 80rpx;
    bottom: -12rpx;
}

.setinfo{
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
}

.info_box{
    /* height: 360rpx; */
    background-color: #FFFFFF;
    margin-top: 25rpx;
    border-bottom: 1px solid #F2F2F2;
}

.btn{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background-color: #FFFFFF;
    font-size: 32rpx;
}

.input_box{
    display: inline-block;
    height: 60rpx;
    width: 80%;
    font-size: 30rpx;
    margin-left: 10%;
    margin-top: 15rpx;
    padding: 0 20rpx;
    background-color: #F2F2F2;
    position: relative;
    right: 20rpx;
    border-radius: 5px;
}