/* pages/noticeinfo/noticeinfo.wxss */
page{
    background-color: #ffffff;
}
.heard{
  display:flex;
  position:fixed;
  left:0;
  top:0;
  right:0;
  z-index: 10;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:37rpx;
  letter-spacing:2px;
}

.nav-title text{
  font-size: 36rpx;
  color:#333333;
}

.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #fff;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
  position:absolute;
  padding:0 15px 0;
  line-height:85rpx;

}
.right-arrow::after {
  display: inline-block;
  content: " ";
  height: 20rpx;
  width: 20rpx;
  border-width: 3rpx 3rpx 0 0;
  border-color: #000;
  border-style: solid;
  transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
pages{
  height:100%;
  width:100%;
}
.swiper-tab{
    display: flex;
    border-bottom: 1rpx solid rgb(233, 231, 231); 
    text-align: center; 
    height: 82rpx;
    line-height: 100rpx;
    background-color: #fff;
    color: #EFB336;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    z-index: 999;
}

.swiper-tab-list{
    font-size: 24rpx;
    font-family: Arial;
    display: inline-block; 
    flex: 1;
}

.on{
    border-bottom: 5rpx solid #EFB336;
    color: #EFB336;
}



.swiper-box{ 
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.menu{
  margin: 0 20rpx;
  border-bottom:1rpx solid #cccccc;
  display:flex;
}

.menuleft{
  flex:6;
  display: flex;
  flex-direction:column;
  color:#868686;
  margin-left:20rpx;
  font-size: 32rpx;
}
.menuright{
  flex:2;
  text-align:center;
  line-height:100rpx;
  color:#EFB336;
}