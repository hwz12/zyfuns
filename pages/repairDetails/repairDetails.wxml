<!--pages/repairDetails/repairDetails.wxml-->
<import src="../shop_details/stars/stars.wxml" />
<page>
<view class='heard'>
  <view class='nav bg-gray' style='height:{{navH}}px'>
    <view class='nav-title'>
    <view class='right-arrow' bindtap="goRepair"></view>
     <text>我要报修</text>
      <!-- <image src='/images/scan.png' mode='aspectFit' class='back' bindtap='navBack'></image>  -->
    </view>
  </view>
</view>
<view class='detailName'>
   <view class='repairDetail'>报修原因</view>
   <view class='nameTime'>
     <view class='repairName'>申请人:<text>广工教务-李莉</text></view>
     <view class='repairTime'>申请时间:<text>2019-06-27 16：00</text></view>
   </view>
</view>
<view class='repairAskDetail'>
   <view class='askDetail'>维修申请详情</view>
   <view class='repairImg'><view>图片:</view>
     <image></image>
     <image></image>
     <image></image>
     <image></image>
   </view>
   <view class='repairMessage'>
     <view class='failureDescription'>
       <text>故障描述:</text>
       <view class='description'>打开点火并关机ecp灯不亮,其余仪表正常,推倒启动档，启动档不转,推倒启动档，启动档不转</view>
     </view>
     <view class='failureDescription'>
       <text>维修地址:</text>
       <view class='address'>3号教学楼多媒体教室</view>
     </view>
     <view class='failureDescription'>
       <text>预约时间:</text>
       <view class='time'>2019-06-27 16：00</view>
     </view>
     <view class='failureDescription'>
       <text>联系手机:</text>
       <view class='phone'>1578544856</view>
     </view>
   </view>
</view>
<view class='repairSchedule'>
   <view class='askDetail'>维修进度详情</view>
   <view class='allTime'>
     <view class='allTimeOne'>
       <view class='day'>08-04</view>
       <view class='hour'>15:00</view>
     </view>
     <view class='allTimeTwo'>
       <view class='day'>08-04</view>
       <view class='hour'>15:00</view>
     </view>
   </view>
   <view class='state_icon'>
     <image src='/images/state-go.png' style='width:10px; height:10px;margin-top:-5px;'></image>
     <!-- <image src='/' style='width:10px; height:10px;margin-right:-5px;flex:0.6;'></image> -->
     <view class='state_icon1' style='flex:2.5;'>
          <progress   percent="100" activeColor="#3881B4" backgroundColor="#333333" stroke-width="1"  />
     </view>
     <view style='flex:0.2;' class='state1'>
     </view>
     <view class='state_icon2' style='flex:1;'>
          <progress   percent="100" activeColor="#3881B4" backgroundColor="#333333" stroke-width="1"  />
     </view>
     <view style='flex:0.2;' class='state1'>
     </view>
     <view class='state_icon3'  style='flex:1;'>
          <progress   percent="100" activeColor="#3881B4" backgroundColor="#333333" stroke-width="1"  />
     </view>
     <view style='flex:0.2;' class='state1'>
     </view>
     <view class='state_icon3'  style='flex:1;'>
          <progress   percent="100" activeColor="#3881B4" backgroundColor="#333333" stroke-width="1"  />
     </view>
     <view style='flex:0.2;' class='state1'>
     </view>
     <view class='state_icon3'  style='flex:1.5;'>
          <progress   percent="100" activeColor="#3881B4" backgroundColor="#333333" stroke-width="1"  />
     </view>
     <image src='/images/state-ok.png' style='width:10px; height:10px;margin-top:-5px;'></image>
   </view>
   <view class='state_text'>
     <view class='masterOk'>已处理</view>
     <view class='masterName'>[维修人]刘师傅</view>
     <view class='masterPhone'>[联系电话]12345678901</view>
     <view class='masterTime'>[维修时间]2019-06-29 12:00</view>
     <view class='masterIdeil'>[解决办法]内部零件生锈,已换新</view>
     <view class='masterPhoto'><text>[图片]</text>
        <image style='width:120rpx; height:120rpx;margin-left:20rpx;'></image>
     </view>
     <view class='masterStar'>开始处理</view>
   </view>
</view>
<view class='repairComment'>
  <view class='commentDetail'>维修评论详情</view>
  <view class="stars">
  评价：
      <template wx:if="{{score<=20}}" is="stars1"/>
      <template wx:elif="{{score<=30}}" is="stars2"/>
      <template wx:elif="{{score<=40}}" is="stars3"/>
      <template wx:elif="{{score<=50}}" is="stars4"/>
      <template wx:elif="{{score<=60}}" is="stars5"/>
      <template wx:elif="{{score<=70}}" is="stars6"/>
      <template wx:elif="{{score<=80}}" is="stars7"/>
      <template wx:elif="{{score<=90}}" is="stars8"/>
      <template wx:elif="{{score>90}}" is="stars9"/>
  </view>
  <view class='remark'>备注：<text>哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈</text></view>
</view>
</page>
