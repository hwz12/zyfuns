/* pages/noticeinfo/noticeinfo.wxss */
page{
    background-color: #ffffff;
}
.heard{
display:flex;
position:fixed;
left:0;
top:0;
right:0;
z-index: 10;
}
.nav{
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
}
.nav-title{
width: 100%;
height: 45px;
line-height: 45px;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-family:PingFang-SC-Medium;
font-size:37rpx;
letter-spacing:2px;
}

.nav-title text{
font-size: 36rpx;
}

.nav .back{
width: 22px;
height: 22px;
position: absolute;
bottom: 0;
left: 0;
padding: 10px 15px;
}
.bg-white{
background-color: #fff;
}
.bg-gray{
background-color: #fff;
}
.overflow{
overflow: auto;
}
.hidden{
overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.title {
  font-size: 48rpx;
  line-height: 1.6;
  font-weight: bold;
  outline: none;
  color: #3a4040;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.author-img {
  line-height: 1.6;
  font-weight: blod;
  outline: none;
  margin-bottom: 80rpx;
  border-bottom:1px solid #eee;
}
.shopimg{
  width:100%;
  border-radius:10rpx;
}
.author{
  color: #959595;
  position: relative;
  bottom: 10rpx;
  font-size: 30rpx;
}

.img-author{
  width: 48rpx !important;
  height: 48rpx !important;
  bottom: 8rpx;
}

.timein {
  color: #959595;
  font-size: 24rpx;
  position: relative;
  left:55%;
  bottom: 10rpx;
  margin-right: 10rpx;
}

.container {
  padding: 0 24rpx;
  background-color: #fff;
  font-family: Microsoft YaHei, Helvetica, Arial, sans-serif;
}

.entry-summary {
  font-size: 32rpx;
  line-height: 64rpx;
  letter-spacing: 1px;
}

.entry-summary image {
  width: 100% !important;
}

.img{
  width: 400rpx !important;
  height: 50rpx !important;
  position: absolute; 
  left: 180rpx;
}