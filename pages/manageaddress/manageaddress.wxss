
.heard{
display:flex;
position:fixed;
left:0;
top:0;
right:0;
z-index: 10;
}
.nav{
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
}
.nav-title{
width: 100%;
height: 45px;
line-height: 45px;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-family:PingFang-SC-Medium;
font-size:37rpx;
letter-spacing:2px;
}

.nav-title text{
font-size: 36rpx;
}

.nav .back{
width: 22px;
height: 22px;
position: absolute;
bottom: 0;
left: 0;
padding: 10px 15px;
}
.bg-white{
background-color: #fff;
}
.bg-gray{
background-color: #fff;
}
.overflow{
overflow: auto;
}
.hidden{
overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.address_box{
    height: 160rpx;
    width: 94%;
    margin-left: 3%;
    margin-top: 20rpx;
    border-radius: 4px;
    background-color: #FFFFFF;
    font-size: 24rpx;
    position: relative;
}

.adname{
    display: inline-block;
    height: 80rpx;
    line-height: 95rpx;
    margin-left: 25rpx;
}

.userinfo{
    height: 80rpx;
    line-height: 65rpx;
}

.username{
    margin-left: 25rpx;
}

.userphone{
    margin-left: 35rpx;
}

.btn{
    height: 80rpx;
    line-height: 80rpx;
    width: 94%;
    text-align: center;
    background-color: #549688;
    color: #FFFFFF;
    border-radius: 3px;
    position: fixed;
    left: 3%;
    bottom: 20rpx;
    font-size: 28rpx;
}

.btn_hover{
    opacity: 0.9;
}

.footer{
    margin-top: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
    color: #797979;
}