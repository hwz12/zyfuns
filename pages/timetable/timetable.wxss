page{
    background-color: #FFFFFF;
}
.heard{
display:flex;
position:fixed;
left:0;
top:0;
right:0;
z-index: 10;
}
.nav{
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
}
.nav-title{
width: 100%;
height: 45px;
line-height: 45px;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-family:PingFang-SC-Medium;
font-size:37rpx;
letter-spacing:2px;
}

.nav-title text{
font-size: 36rpx;
}

.nav .back{
width: 22px;
height: 22px;
position: absolute;
bottom: 0;
left: 0;
padding: 10px 15px;
}
.bg-white{
background-color: #fff;
}
.bg-gray{
background-color: #fff;
}
.overflow{
overflow: auto;
}
.hidden{
overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.header{
    height: 90rpx;
    background-color: #FFFFFF;
    color: #549688;
    text-align: center;
    display: flex;
}

.week{
    display: block;
    height: 50rpx;
    line-height: 65rpx;
    font-size: 28rpx;
}

.semester{
    display: block;
    height: 40rpx;
    line-height: 25rpx;
    font-size: 20rpx;
}

.cross{
    display: inline-block;
    height: 28rpx;
    width: 28rpx;
}

.cross view{
    float: left;
    width: 50%;
    height: 50%;
}

.date{
    height: 100rpx;
    text-align: center;
    background-color: #E7F8EF;
    border-bottom: 1px solid #A4E2C6;
    font-size: 20rpx;
    display: flex;
}

.tweek{
    flex:2;
}

.on{
    background-color: #A4E2C6;
}

.date_up{
    display: block;
    height: 50rpx;
    line-height: 75rpx;
}

.date_down{
    display: block;
    height: 50rpx;
    line-height: 25rpx;
}

.timetable{
    height: 130rpx;
    text-align: center;
    font-size: 18rpx;
    border-bottom: 1px solid #F2F2F2;
    display: flex;
}

.timetable view{
    flex:2;
    margin: 0 1px;
}

.info{
    height: 256rpx;
    width: 100%;
    padding: 0 10rpx;
    border-radius: 10rpx;
    display:table-cell;
	vertical-align:middle;
    position: relative;
    top: 2px;
}

.info text{
    display: block;
}