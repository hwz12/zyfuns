page{background-color:#fff;}
.heard{
  display:flex;
  position:fixed;
  left:0;
  top:0;
  right:0;
  z-index: 10;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:37rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #fff;
  color: #000;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
/* 返回报修页面箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;
}

.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.search_icon{
    position: absolute;
    left:45rpx;
}
.check{
    font-size: 22rpx;
    margin: 20rpx;
    color: #2D2C31;
    font-family: Arial;
    border-radius: 100rpx;
    border:1px solid #2D2C31;
    padding-left:60rpx;
}
