page{
  width: 100%;
  height: 100%;
}
.swiper-tab{
    display: flex;
    border-bottom: 1rpx solid #CCCCCC; 
    text-align: center; 
    height: 65rpx;
    line-height: 65rpx;
    background-color: #2D2C31;
    color: #FFFFFF;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    z-index: 999;
}

.swiper-tab-list{
    font-size: 24rpx;
    font-family: Arial;
    display: inline-block; 
    flex: 1;
}

.on{
    border-bottom: 5rpx solid #A4E2C6;
}

.swiper-box{ 
    display: block;
    height: 395rpx;
    width: 100%;
    overflow: hidden;
}

.search{
    padding: 13rpx 0;
    background-color: #D7D7D7;
}

.search_input{
    height: 48rpx;
    line-height: 30rpx;
    width: 80%;
    margin-left: 10%;
    background-color: #FFFFFF;
    border-radius: 10rpx;
    text-align: center;
}

.search_input text{
    font-size: 22rpx;
    margin-left: 15rpx;
    color: #2D2C31;
    font-family: Arial;
}

.shop{
    height: 195rpx;
    width: 96%;
    background-color: #FFFFFF;
    margin: 15rpx 2% 0 2%;
    border-radius: 8rpx;
    position: relative;
}

.shop-hover{
    background-color: rgba(0,0,0,0.1);
}

.goods_img{
    float: left;
    width: 157rpx;
    height: 157rpx;
    margin: 19rpx 35rpx 19rpx 19rpx;
}

.shop_name{
    line-height: 80rpx;
    font-size: 28rpx;
    font-family: Arial;
}

.shop_info{
    height: 22rpx;
    line-height: 22rpx;
    font-size:22rpx;
    font-family: Arial;
}

.shop_info image{
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
    position: relative;
    top: 2rpx;
}

.ave{
    color: #797979;
    padding-left: 15rpx;
    margin-left: 30rpx;
    border-left: 1px solid #A4E2C6;
}

.shop_label{
    height: 90rpx;
    line-height: 100rpx;
    font-size: 12px;
    color: #549688;
}

.shop_label text{
    padding: 2px 4px;
    border: 1px solid #549688;
    margin-right: 5px;
    border-radius: 4px;
}

.open{
    font-size: 12px;
    background-color: #549688;
    color:#FFFFFF;
    width: 50px;
    text-align: center;
    height: 20px;
    line-height: 20px;
    border-radius: 5px;
    position: absolute;
    right: 10px;
    bottom: 10px;
    font-family: Arial;
}

.close{
    font-size: 12px;
    background-color: #CCCCCC;
    color:#FFFFFF;
    width: 50px;
    text-align: center;
    height: 20px;
    line-height: 20px;
    border-radius: 5px;
    position: absolute;
    right: 10px;
    bottom: 10px;
    font-family: Arial;
}