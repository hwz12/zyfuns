/* pages/noticeinfo/noticeinfo.wxss */
page{
    background-color: #ffffff;
}
.heard{
  display:flex;
  position:fixed;
  left:0;
  top:0;
  right:0;
  z-index: 10;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:37rpx;
  letter-spacing:2px;
}

.nav-title text{
  font-size: 36rpx;
  color:#333333;
}

.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #fff;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
  position:absolute;
  padding:0 15px 0;
  line-height:85rpx;

}
.right-arrow::after {
  display: inline-block;
  content: " ";
  height: 20rpx;
  width: 20rpx;
  border-width: 3rpx 3rpx 0 0;
  border-color: #000;
  border-style: solid;
  transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}

.head{
  display:flex;
  height:150rpx;
  border-bottom:2rpx solid #c1c1c1;
}
.headmenu{
  flex:3;
  text-align:center;
  line-height: 150rpx;
}
.headmenu image{
  height:40rpx;
  width:40rpx;
}
.headmenu text{
  font-size: 48rpx;
}
.headmoney{
  flex:3;
  text-align: right;
}
.headmoney text{
  margin-right:40rpx;
  color: #A1A1A1;
  font-size: 30rpx;
}
.menus{
  margin:0 30rpx;
}
.menu{
  display:flex;
  margin-top:20rpx;
  box-shadow: 2px 2px 5px #cccccc;
}
.menu image{
  height:150rpx;
  width:150rpx;
}
.menu view{
  flex:3;
  align-items:center;
  line_height:150rpx;
}
.menuname{
  text-align:center;
  line-height:150rpx;
  color:#707070;
}
.menuprice{
  text-align: center;
  line-height: 150rpx;
}
.menuprice image{
  height:50rpx;
  width:50rpx;
}
.menuprices{
  display:flex;
}