
.heard{
display:flex;
position:fixed;
left:0;
top:0;
right:0;
z-index: 10;
}
.nav{
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
}
.nav-title{
width: 100%;
height: 45px;
line-height: 45px;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-family:PingFang-SC-Medium;
font-size:37rpx;
letter-spacing:2px;
}

.nav-title text{
font-size: 36rpx;
}

.nav .back{
width: 22px;
height: 22px;
position: absolute;
bottom: 0;
left: 0;
padding: 10px 15px;
}
.bg-white{
background-color: #fff;
}
.bg-gray{
background-color: #fff;
}
.overflow{
overflow: auto;
}
.hidden{
overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.phone{
    height: 200rpx;
    background-color: #FFFFFF;
    position: relative;
}

.info{
    height: 200rpx;
    width: 450rpx;
    padding-left: 25rpx;
    display:table-cell;
	vertical-align:middle;
}

.headline{
    display: block;
    font-size: 32rpx;
}

.text{
    font-size: 28rpx;
    color: #A1A1A1;
}

.phonebtn{
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    width: 150rpx;
    border: 1px solid #549688;
    color: #549688;
    border-radius: 5px;
    font-size: 28rpx;
    position: absolute;
    top: 75rpx;
    right: 25rpx;
}

.btn-hover{
    background-color: rgba(84,150,136,0.1);
}

.menu{
    margin-top: 20rpx;
    background-color: #FFFFFF;
    padding-left: 25rpx;
    padding-top: 10rpx;
}

.reason{
    display: block;
    font-size: 32rpx;
    color: #549688;
}

textarea{
    width: 90%;
    margin-left: 5%;
    margin-top: 10rpx;
    border: 1px solid #549688;
    border-radius: 10rpx;
    font-size: 30rpx;
    padding: 15rpx;
    position: relative;
    right: 25rpx;
}

.mbtn{
    display: inline-block;
    margin: 15rpx 25rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    width: 150rpx;
    background-color: #549688;
    color: #FFFFFF;
    border-radius: 5px;
    font-size: 28rpx;
}