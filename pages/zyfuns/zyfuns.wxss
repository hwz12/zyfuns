.heard{
  display:flex;
  position:fixed;
  left:0;
  top:0;
  right:0;
  z-index: 10;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:37rpx;
  letter-spacing:2px;
}

.nav-title text{
  font-size: 36rpx;
}

.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #f2f2f2;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.header{
    height: 390rpx;
    text-align: center;
    font-size: 26rpx;
    color: #797979;
}

.logo{
    height: 200rpx;
    width: 200rpx;
    margin: 85rpx auto 20rpx auto;
}

.btns{
    background-color: #FFFFFF;
}

.btn{
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 5%;
    font-size: 22rpx;
}

.footer{
    text-align: center;
    font-size: 20rpx;
    position: absolute;
    left: 0;
    bottom: 40rpx;
    right: 0;
}