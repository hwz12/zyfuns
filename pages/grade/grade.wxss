page{
    background-color: #549688;
}
.heard{
display:flex;
position:fixed;
left:0;
top:0;
right:0;
z-index: 10;
}
.nav{
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
}
.nav-title{
width: 100%;
height: 45px;
line-height: 45px;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-family:PingFang-SC-Medium;
font-size:37rpx;
letter-spacing:2px;
}

.nav-title text{
font-size: 36rpx;
}

.nav .back{
width: 22px;
height: 22px;
position: absolute;
bottom: 0;
left: 0;
padding: 10px 15px;
}
.bg-white{
background-color: #fff;
}
.bg-gray{
background-color: #fff;
}
.overflow{
overflow: auto;
}
.hidden{
overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.department{
    height: 60rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    padding-left: 27rpx;
}

.user_info{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    padding-left: 27rpx;
}

.user_info text{
    margin-right: 20rpx;
}

.subject{
    height: 138rpx;
    display: flex;
    margin-bottom: 30rpx;
}

.subject_left{
    width: 15rpx;
    height: 118rpx;
    margin: 10rpx 15rpx 10rpx 25rpx;
    background-color: #C0EBD7;
}

.subject_right{
    flex: 1;
    margin-right: 25rpx;
    background-color: #FFFFFF;
    border-radius: 10rpx;
    display: flex;
}

.info_left{
    flex: 3;
    padding-left: 25rpx;
}

.subject_name{
    display: block;
    height: 69rpx;
    line-height: 79rpx;
    font-size: 28rpx;
}

.credit{
    display: block;
    height: 69rpx;
    line-height: 59rpx;
    font-size: 20rpx;
    color: #666666;
}

.info_right{
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #549688;
    height: 108rpx;
    line-height: 108rpx;
    margin-top: 15rpx;
    border-left: 1px solid #C0EBD7;
    position: relative;
}

.state{
    height: 58rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    width: 125rpx;
    border: 2px solid #549688;
    transform:rotate(345deg);
    position: absolute;
    top: 30rpx;
    left: -100rpx;
}

.state1{
    height: 58rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    width: 125rpx;
    border: 2px solid #FF0000;
    color: #FF0000;
    transform:rotate(345deg);
    position: absolute;
    top: 30rpx;
    left: -100rpx;
}
