page{
    background-color: #F2F2F2;
}
.heard{
  display:flex;
  position:fixed;
  left:0;
  top:0;
  right:0;
  z-index: 10;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:37rpx;
  letter-spacing:2px;
}

.nav-title text{
  font-size: 36rpx;
}

.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #f2f2f2;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;

}
.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
.address_box{
    height: 160rpx;
    width: 94%;
    margin-left: 3%;
    margin-top: 20rpx;
    border-radius: 4px;
    background-color: #FFFFFF;
    font-size: 24rpx;
    position: relative;
}

.adname{
    display: inline-block;
    height: 80rpx;
    line-height: 95rpx;
    margin-left: 25rpx;
}

.userinfo{
    height: 80rpx;
    line-height: 65rpx;
}

.username{
    margin-left: 25rpx;
}

.userphone{
    margin-left: 35rpx;
}