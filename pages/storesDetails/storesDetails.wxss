/* 返回报修页面箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;
}

.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #888;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
