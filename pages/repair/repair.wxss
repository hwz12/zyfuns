page{background-color:#f0edf4;}
.heard{
  display:flex;
  position:fixed;
  left:0;
  top:0;
  right:0;
  z-index: 10;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:37rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #f0edf4;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
/* 返回首页箭头 */
.right-arrow {
position:absolute;
padding:0 15px 0;
line-height:85rpx;
}

.right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #000;
border-style: solid;
transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
}
/* 报修类型区 */
.repairDescribe{
  width: 96%;
  height: 596rpx;
  background-color: #fff;
  display: block;
  margin-left: 2%;
  border-radius: 30rpx;
  box-shadow: 2px 2px 5px #999;
}
.repairDescribe .top{
  width: 100%;
  height: 129rpx;
  border-radius: 30rpx 30rpx 0 0;
  position: relative;
  background-color: #3881b4;
}
.repairDescribe .top .topInner{
  width: 85%;
  height: 89rpx;
  margin-left:4%;
  margin-top: 20rpx;
  font-size: 35rpx;
  line-height: 89rpx;
  border-bottom:1px dashed #fff;
  padding: 0 0 0 15rpx;
  position: absolute;
  color:#fff;
  float: flex;
}
.chooseKind{
display: inline-block;
width: 75%;
text-align: right;
color: #fff;
position: absolute;
}
/* 选择类型箭头 */
.bttom-arrow {
width: 36rpx;
height: 36rpx;
position: relative;
top: -8rpx;
float: right;
}

.bttom-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #fff;
border-style: solid;
transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
}
/* 问题描述 */
.buttom{
    height: 457rpx;
}
.problem{
  font-size: 23rpx;
  height: 300rpx;
}
/* 调用手机照相机区域 */
.imgChooes image{
  width: 100rpx;
  height: 100rpx;
}
/* 图片选择后放置区域 */
.photoArea image{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-left: 4%;
  border:1px dashed #f0edf4;
  /* display: inline-block; */
}
/* 申请人信息区域 */
.personMessage{
  width: 96%;
  height: 472rpx;
  margin: 10rpx 2%;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 2px 2px 5px #999;
}
.personMessage image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  padding: 13rpx 0;
  position: absolute;
}
.personMessage input{
  display: inline-block;
  position: absolute;
  margin: 10rpx 45rpx;
  font-size: 28rpx;
}
/* 姓名单位 */
.nameCompany{
  width: 93%;
  height: 100rpx;
  border-bottom:1px solid #888;
  margin: 10rpx 0 0 4%;
  position: relative;
}
.name{
  display: inline-block;
  width: 48%;
  height: 65rpx;
  position: absolute;
  top: 20%;
  border-right: 1px solid #999;
}
.company{
  display: inline-block;
  width: 48%;
  height: 60rpx;
  font-size: 28rpx;
  position: absolute;
  top: 35rpx;
  margin-left: 50%;
}
/* 所在单位箭头 */
.address-bttom-arrow {
width: 36rpx;
height: 36rpx;
float: right;
}
.address-bttom-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #999;
border-style: solid;
transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
}
/* 输入地址区 */
.address{
  width: 93%;
  height: 100rpx;
  margin: 10rpx 0 0 4%;
  font-size: 28rpx;
  border-bottom:1px solid #888;
  position: relative;
}
.address input{
  top: 15rpx;
}
.address image{
  padding: 25rpx 0 0 0;
}
/* 输入电话区 */
.phone{
  width: 93%;
  height: 100rpx;
  margin: 10rpx 0 0 4%;
  font-size: 28rpx;
  border-bottom:1px solid #888;
  position: relative;
}
.phone input{
  top: 15rpx;
}
.phone image{
  padding: 25rpx 0 0 0;
}
/* 预约时间区 */
.time{
  width: 93%;
  height: 100rpx;
  margin: 10rpx 0 0 4%;
  font-size: 28rpx;
  position: relative;
}
.time image{
  padding: 35rpx 0 0 0;
}
.time picker{
  padding: 40rpx 0 40rpx 40rpx;
}
/* 预约时间箭头 */
.time-right-arrow {
width: 36rpx;
height: 36rpx;
float: right;
}
.time-right-arrow::after {
display: inline-block;
content: " ";
height: 20rpx;
width: 20rpx;
border-width: 3rpx 3rpx 0 0;
border-color: #999;
border-style: solid;
transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
/* 按钮 */
.foundRepairBtn{
  width: 80%;
  margin-top: 50rpx;
  border: none;
  border-radius: 30rpx;
}